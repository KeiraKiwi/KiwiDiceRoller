<Window x:Class="KiwiDiceRoller.RollResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiwiDiceRoller"
        mc:Ignorable="d"
        Title="Roll Results" Height="500" Width="400" Background="DimGray">

    <Grid>
        <Viewbox Grid.Row="1" StretchDirection="DownOnly">
            <TextBox Background="DimGray" Grid.Row="1" Name="RollText" Width="1000" Height="1000" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" FontSize="36" Text=""/>
        </Viewbox>
    </Grid>
    

</Window>
